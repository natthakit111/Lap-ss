#include <stdio.h>
#include <stdlib.h>

int** GetMatrix(int *row, int *col) {
    printf("Enter number of rows: ");
    scanf("%d", row);
    
    printf("Enter number of columns: ");
    scanf("%d", col);

    int **matrix = (int **)malloc(*row * sizeof(int *));
    if (matrix == NULL) {
        printf("Memory allocation failed\n");
        exit(1);
    }

    for (int i = 0; i < *row; i++) {
        matrix[i] = (int *)malloc(*col * sizeof(int));
        if (matrix[i] == NULL) {
            printf("Memory allocation failed\n");
            exit(1);
        }
    }

    printf("Enter elements of the matrix:\n");
    for (int i = 0; i < *row; i++) {
        for (int j = 0; j < *col; j++) {
            scanf("%d", &matrix[i][j]);
        }
    }

    return matrix;
}

int main() {
    int **data, m, n;
    data = GetMatrix(&m, &n);

    printf("Matrix elements:\n");
    for (int i = 0; i < m; i++) {
        for (int j = 0; j < n; j++) {
            printf("%d ", data[i][j]);
        }
        printf("\n");
    }

    for (int i = 0; i < m; i++) {
        free(data[i]);
    }
    free(data);

    return 0;
}
